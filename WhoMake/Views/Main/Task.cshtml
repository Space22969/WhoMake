           echo ' <div style="float: left; width: 18%;"><strong>Начать:</strong></div><div style="width: 85%;"> '.$timeDo["date_begin"].'</div>
           <br>
           <div style="float: left; width: 18%;"><strong>Завершить:</strong></div><div style="width: 85%;"> '.$timeDo["date_end"].'</div>';
       
        if($timeDo["date_exeq_begin"]>0)
           echo ' <div style="float: left; width: 15%;"><strong>Начать:</strong></div><div style=" width: 85%;">'.$timeDo["date_exeq_begin"].' '.$timeDo["time_exeq_begin"].'</div>';
       
        if($timeDo["date_exeq_end"]>0)
           echo ' <div style="float: left; width: 17%;"><strong>Завершить:</strong></div><div style="margin-top:15px; width: 85%;">'.$timeDo["date_exeq_end"].' '.$timeDo["time_exeq_end"].'</div>';


-->

    </div>
       <div class="col-md-3 col-md-offset-1"
            style="
       padding: 15px 35px 45px;
       background-color: #fff;
       border: 1px solid rgba(0, 0, 0, 0.1);
       position: fixed;
       right: 10px;"><div id="place_for_cookie"><button id="cookiebutton" class="flat-butt flat-info-butt btn-block">Показать номер</button></div>
       <div class="row task">
           <div class="row">
               <div class="col-md-6"><span style="font-size:20px; font-weight:600;">Заказчик:</span></div>
           </div>
           <div class="row">
               <div class="col-md-12" style="padding-left: 30px;padding-top: 5px;">
                   @ViewBag.User.users_name @ViewBag.User.users_secname.Substring(0, 1).<br />на сайте с @ViewBag.User.users_regdate.ToString("dd MMMM yyyy года",
                        CultureInfo.CreateSpecificCulture("ru-RU"))
               </div>
           </div>
       </div>
       </div>
    </div>
</div>
<script>

    $("#cookiebutton").click(function () {
        $("#place_for_cookie").html('<button class="flat-butt flat-info-butt btn-block" disabled>@ViewBag.Task.tasks_phone</button>');
    });

</script>